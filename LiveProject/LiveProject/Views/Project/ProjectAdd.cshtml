@model LiveProject.Models.Project

@{
    ViewBag.Title = "ProjectAdd";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shCk1k/dQMI/cF+Q7DtcxhqXvcqruXWfdfwnJ" crossorigin="anonymous">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@3.10.2/dist/fullcalendar.min.css" />

<h3 class="mt-4">Create</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container border border-2 border-secondary rounded-2 w-75 mt-3 ms-0">
        <div class="row mt-4 ms-3">
            <div class="col-md-5">
                <div class="form-group fw-bold">
                    @Html.LabelFor(model => model.projName)
                    <label class="text-danger">*</label>
                    @Html.EditorFor(model => model.projName, new { htmlAttributes = new { @class = "form-control mt-2" } })
                    @Html.ValidationMessageFor(model => model.projName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @{
                        List<SelectListItem> data1 = ViewBag.Resourcelist;
                    }
                    @Html.LabelFor(model => model.projManager)<label class="text-danger">*</label>
                    @Html.DropDownListFor(model => model.projManager, data1, "Select Id", new { @class = "form-control mt-2" })
                    @Html.ValidationMessageFor(model => model.projManager, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @{
                        List<SelectListItem> data = ViewBag.Categorylist;
                    }
                    @Html.LabelFor(model => model.technology)
                    <label class="text-danger">*</label>
                    @Html.DropDownListFor(model => model.technology, data, " Select Id", new { @class = "form-control mt-2" })
                    @Html.ValidationMessageFor(model => model.technology, "", new { @class = "text-danger" })
                </div>


            </div>
            <div class="col-md-7">
                <div class="form-group fw-bold">
                    @Html.LabelFor(model => model.startDate)<label class="text-danger">*</label>
                    @Html.EditorFor(model => model.startDate, new { htmlAttributes = new { @class = "form-control mt-2", id = "startDate" } })
                    @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @Html.LabelFor(model => model.endDate)<label class="text-danger">*</label>
                    @Html.EditorFor(model => model.endDate, new { htmlAttributes = new { @class = "form-control mt-2", id = "endDate" } })
                    @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @Html.LabelFor(model => model.status)
                    <label class="text-danger">*</label><br />
                    <span class="fw-normal">
                        @Html.RadioButtonFor(model => model.status, "In Process", new { @checked = "checked", @class = "mt-2" })
                        @Html.Label("In Process")
                        @Html.RadioButtonFor(model => model.status, "Out Process", new { @checked = "checked", @class = "ms-2" })
                        @Html.Label("Out Process")
                    </span>
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary ms-4 mb-3" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        // attach change event listener to both start date and end date fields
        $('#startdate, #enddate').on('change', function () {
            var entereddate = new date($(this).val());
            var currentdate = new date(); // get the current date

            if (entereddate < currentdate) {
                alert('please enter today or a future date.');
                $(this).val(''); // clear the input field
            }
        });
    });
</script>



